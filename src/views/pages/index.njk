{% set title = 'Home Page' %}
{% set homePage = true %}

{% extends 'layouts/default.njk' %}
{% import "macro/macro.njk" as imageCurve %}
{% import "macro/tabs.njk" as tabs %}

{% block content %}
    <div class="container">
        {# <div class="row">
            <div class="col-md-12">
                <button class="btn-primary btn print-btn" style="margin: 20px 0">Print Day</button>
            </div>
        </div> #}
        <div class="row">
            <div class="col-md-12">
                <div class="panel panel-flat">
                    <!--    Days tabs.  -->
                    <div>

                        <!-- Nav tabs -->
                        <ul class="nav nav-tabs" role="tablist" id="days">
                            <li role="presentation" class="active">
                                <a href="#sun" aria-controls="sun" role="tab" data-toggle="tab">
                                    <div class="date-heading">
                                        <div>SUN <span>31 Oct</span></div>
                                        <i>27 Employees</i>
                                    </div>
                                </a>
                            </li>
                            <li role="presentation">
                                <a href="#mon" aria-controls="mon" role="tab" data-toggle="tab">
                                    <div class="date-heading">
                                        <div>MON <span>01 Nov</span></div>
                                        <i>16 Employees</i>
                                    </div>
                                </a>
                            </li>
                            <li role="presentation">
                                <a href="#tue" aria-controls="tue" role="tab" data-toggle="tab">
                                    <div class="date-heading">
                                        <div>TUE <span>02 Nov</span></div>
                                        <i>18 Employees</i>
                                    </div>
                                </a>
                            </li>
                            <li role="presentation">
                                <a href="#wed" aria-controls="wed" role="tab" data-toggle="tab">
                                    <div class="date-heading">
                                        <div>WED <span>02 Nov</span></div>
                                        <i>12 Employees</i>
                                    </div>
                                </a>
                            </li>
                            <li role="presentation">
                                <a href="#thu" aria-controls="thu" role="tab" data-toggle="tab">
                                    <div class="date-heading">
                                        <div>THU <span>03 Nov</span></div>
                                        <i>22 Employees</i>
                                    </div>
                                </a>
                            </li>
                            <li role="presentation">
                                <a href="#fri" aria-controls="fri" role="tab" data-toggle="tab">
                                    <div class="date-heading">
                                        <div>FRI <span>04 Nov</span></div>
                                        <i>25 Employees</i>
                                    </div>
                                </a>
                            </li>
                            <li role="presentation">
                                <a href="#sat" aria-controls="sa" role="tab" data-toggle="tab">
                                    <div class="date-heading">
                                        <div>SAT <span>05 Nov</span></div>
                                        <i>12 Employees</i>
                                    </div>
                                </a>
                            </li>
                        </ul>

                        <!-- Tab panes -->
                        <div class="tab-content">
                            <div role="tabpanel" class="tab-pane active fade in" id="sun">
                                <div class="emp-hours">
                                    <section class="emp-hours__left">
                                        <div class="h-row">
                                            <div class="h-th">Employee Name</div>
                                        </div>
                                        {% for item in employee %}
                                            <div class="h-row">
                                                <div class="h-th">
                                                    <div class="emp-name">
                                                        {{ item.name }}
                                                        <span>{{ item.time }}</span>
                                                    </div>
                                                </div>
                                            </div>
                                        {% endfor %}
                                    </section>
                                    <section class="emp-hours__right">
                                        <div class="h-row">
                                            <div class="h-th">08 am <span>03 Emp</span></div>
                                            <div class="h-th">09 am <span>02 Emp</span></div>
                                            <div class="h-th">10 am  <span>03 Emp</span></div>
                                            <div class="h-th">11 am <span>03 Emp</span></div>
                                            <div class="h-th">12 pm <span>03 Emp</span></div>
                                            <div class="h-th">01 am <span>03 Emp</span></div>
                                            <div class="h-th">02 pm <span>03 Emp</span></div>
                                            <div class="h-th">03 pm <span>03 Emp</span></div>
                                            <div class="h-th">04 pm <span>03 Emp</span></div>
                                            <div class="h-th">05 pm <span>03 Emp</span></div>
                                            <div class="h-th">06 pm <span>03 Emp</span></div>
                                            <div class="h-th">07 pm <span>03 Emp</span></div>
                                            <div class="h-th">08 pm <span>03 Emp</span></div>
                                            <div class="h-th">09 pm <span>03 Emp</span></div>
                                            <div class="h-th">10 pm <span>03 Emp</span></div>
                                            <div class="h-th">11 pm <span>03 Emp</span></div>
                                            <div class="h-th">12 am <span>03 Emp</span></div>
                                            <div class="h-th">01 am <span>03 Emp</span></div>
                                            <div class="h-th">02 am <span>03 Emp</span></div>
                                            <div class="h-th">03 am <span>03 Emp</span></div>
                                            <div class="h-th">04 am <span>03 Emp</span></div>
                                            <div class="h-th">05 am <span>03 Emp</span></div>
                                            <div class="h-th">06 am <span>03 Emp</span></div>
                                            <div class="h-th">07 am <span>03 Emp</span></div>
                                        </div>
                                        {% for emps in employee %}

                                            <div class="h-row">
                                                {# {% for i in range(8, 52) %} #}
                                                {% for emp in emps.hours %}
                                                    <div class="h-td">
                                                        <div class="emp-shift {{emp.shift}}"></div>
                                                    </div>
                                                {% endfor %}
                                                {# {% endfor %} #}
                                            </div>

                                        {% endfor %}

                                    </section>
                                </div>
                            </div>
                            <div role="tabpanel" class="tab-pane fade" id="mon">...</div>
                            <div role="tabpanel" class="tab-pane fade" id="tue">...</div>
                            <div role="tabpanel" class="tab-pane fade" id="wed">...</div>
                            <div role="tabpanel" class="tab-pane fade" id="thu">...</div>
                            <div role="tabpanel" class="tab-pane fade" id="fri">...</div>
                            <div role="tabpanel" class="tab-pane fade" id="sat">...</div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}